{
  "name": "employee-api",
  "version": "0.1.0",
  "main": "./build/server.js",
  "author": "Chris Figgins",
  "license": "MIT",
  "engines": {
    "node": "11.x",
    "yarn": "1.x"
  },
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "postinstall": "yarn build",
    "pretest": "tslint --project tsconfig.json --format codeFrame",
    "test": "jest --coverage --colors",
    "test:watch": "jest --coverage --colors --watchAll",
    "serve": "node build/server.js",
    "start": "webpack --watch"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/*.d.ts",
      "!server/server.ts",
      "!server/app.ts"
    ]
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.6",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/mongodb-memory-server": "^1.8.0",
    "@types/mongoose": "^5.3.17",
    "@types/node": "^11.9.4",
    "@types/supertest": "^2.0.7",
    "coveralls": "^3.0.2",
    "jest": "^24.1.0",
    "mongodb-memory-server": "^3.1.1",
    "nodemon-webpack-plugin": "^4.0.7",
    "supertest": "^3.4.2",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "typescript": "^3.3.3",
    "webpack": "^4.29.5",
    "webpack-cli": "^3.2.3"
  },
  "dependencies": {
    "@sendgrid/mail": "^6.3.1",
    "aws-sdk": "^2.412.0",
    "body-parser": "^1.18.3",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "jsonwebtoken": "^8.5.0",
    "mongoose": "^5.4.13"
  }
}
